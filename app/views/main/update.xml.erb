<?xml version="1.0"?>
<html xmlns="http://www.w3.org/1999/xhtml">
<head><title>New post list for AJAX use</title></head>
<body>
    <div id="new_posts" class="post_list">
    <% for p in @new_posts -%>
    <%= render 'post/view', post: p, pinned: false, user: @user -%>
    <% end -%>
    </div>
    <div id="new_latest"><%= Post.last.id -%></div>
    <div id="new_indicators">
    <% indicators = BoardUser.indicators(@user) -%>
    <% for i in 0..(indicators.length - 1) -%>
    <% if indicators[i] != nil -%>
        <span id="indicator_<%=i%>" class="<%=indicators[i]%>"></span>
    <% end -%>
    <% end -%>
    <% if User.any_unconfirmed? -%>
        <span id="indicator__SETTINGS" class="<%=BoardUser::EVENT%>"></span>
    <% end -%>
    </div>
</body>
</html>
